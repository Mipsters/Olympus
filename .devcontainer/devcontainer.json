// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:jammy",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	"customizations": {
		"vscode": {
			"extensions": ["tomblind.local-lua-debugger-vscode"]
		}
	},

	// for x11 forwarding
	"runArgs": [
		"--ipc=host"
	],
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		// to use ${localEnv:UID}, you need to add "export UID" in ~/.bashrc
		// https://github.com/microsoft/vscode-remote-release/issues/6834#issuecomment-1194479134
		"PULSE_SERVER": "unix:/run/user/${localEnv:UID}/pulse/native",
		"AUDIO_USER": "${localEnv:UID}"
	},
	"mounts": [
		{
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.Xauthority",
			"target": "/home/lyonn/.Xauthority",
			"type": "bind"
		},
		// for audio
		{
			"source": "/etc/alsa",
			"target": "/etc/alsa",
			"type": "bind"
		},
		{
			"source": "/usr/share/alsa",
			"target": "/usr/share/alsa",
			"type": "bind"
		},
		{
			"source": "${localEnv:HOME}/.config/pulse",
			"target": "/.config/pulse",
			"type": "bind"
		},
		{
			"source": "/run/user/${localEnv:UID}/pulse/native",
			"target": "/run/user/${localEnv:UID}/pulse/native",
			"type": "bind"
		}
	]
}
